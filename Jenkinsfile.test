pipeline {
  agent {
    kubernetes {
      yaml """
      apiVersion: v1
      kind: Pod
      metadata:
        labels:
          jenkins: maven
      spec:
        containers:
        - name: maven
          image: maven:3.8.4
          command:
          - cat
          tty: true
        - name: npm
          image: node:14.17.0
          command:
          - cat
          tty: true
      """
    }
  }

  stages {
    stage('Checkout') {
      steps {
        git branch: 'main', url: 'https://github.com/WebGoat/WebGoat.git'
      }
    }
    
    stage('Build') {
      steps {
        container('maven') {
            sh 'mvn clean install -DskipTests'
        }
      }
    }

    stage('Synk Scan') {
      steps {
        container('npm') {
          sh 'npm install -g snyk'
          sh 'snyk test'
        }
      }
    }
    
