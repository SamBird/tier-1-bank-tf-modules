pipeline {
  agent {
    kubernetes {
      yaml """
      apiVersion: v1
      kind: Pod
      metadata:
        labels:
          jenkins: maven
      spec:
        containers:
        - name: maven
          image: maven:3.8.4
          command:
          - cat
          tty: true
        - name: docker
          image: docker:20.10.7
          command:
          - cat
          tty: true
          securityContext:
            privileged: true
      """
    }
  }

  stages {
    stage('Checkout') {
      steps {
        git branch: 'main', url: 'https://github.com/WebGoat/WebGoat.git'
